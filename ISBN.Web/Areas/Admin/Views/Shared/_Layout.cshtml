<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Areas/Admin/Content/Site.css")" rel="stylesheet" type="text/css" />
    @*@RenderSection("css", required: false)*@
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    @*@RenderSection("js", required: false)*@
    <script type="text/javascript">
        $(function () {
            $("#menu li a").hover(function () {                
                if($(this).html() === "Roles") {
                    $("#nav-roles").css("display", "block");
                }
            });

            $("#nav-roles").bind("mouseleave", function () {
                $(this).css("display", "none");
            });
        });
    </script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>My MVC Application</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.RouteLink("App Home", new { area="", controller="Home", action="Index" })</li>
                    <li>@Html.RouteLink("Admin Home", new { area="Admin", controller="Default", action="Index" })</li>
                    <li>@Html.RouteLink("Users", new { area="Admin", controller="Users", action="Index" })</li>
                    <li>@Html.RouteLink("Roles", new { area="Admin", controller="Roles", action="Index" })</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>

    <ul id="nav-roles">        
        <li>@Html.RouteLink("Manage Existing Roles", new { area="Admin", controller="Roles", action="Index" })</li>
        <li>@Html.RouteLink("Add Role", new { area="Admin", controller="Roles", action="Add" })</li>        
    </ul>
</body>
</html>
